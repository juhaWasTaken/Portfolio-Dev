---
import { Image } from "astro:assets";
const { frontmatter, url } = Astro.props;
const {title, client, category, year, link, image, image1, image2, image3 } = frontmatter; 

import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<article>
    <div class="flex flex-col gap-5">
        <a href={url}>
            <Image src={image1.src} alt={image1.alt} width="100" height="100" class="w-full h-auto" loading="lazy" format='avif' />
        </a>
    
        <div class="flex justify-between">
            <h2 class="text-white text-[18px] tracking-[-.04em] leading-[1.2em] uppercase">{title}</h2>
    
            <p class="text-white text-[16px] tracking-[-.04em] leading-[1.2em]">{category}</p>
        </div>
    </div>

</article>

